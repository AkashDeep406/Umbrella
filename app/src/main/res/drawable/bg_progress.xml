<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:shape="ring"
        android:thickness="3dp">

        <size
            android:width="80dp"
            android:height="80dp" />

        <gradient
            android:angle="0"
            android:endColor="#ECE81D"
            android:startColor="#DCD71D"
            android:type="linear" />
    </shape>


</rotate>